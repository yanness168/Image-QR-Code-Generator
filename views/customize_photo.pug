extends layout

block content
  h1= title
  if errors 
        each error in errors 
            p(style='color: red') #{error.msg}

  form(method='POST', action="/generate-image")
    lable Height: 
    input(name='height', type='number')
    br
    br
    lable Width: 
    input(name='width', type='number')
    br  
    br
    lable Blur: 
    input(name='blur', type='number')
    br
    br
    lable Grayscale: 
    input(name='grayscale', type='checkbox')
    br
    br
    input(type="submit",value='submit')